<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Back End First Project</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 p-10">
        <form action="/create" method="post">
            <input type="text" class="w-full bg-zinc-500 p-2" placeholder="Enter file name" name="title">
            <textarea name="detail" class="mt-5 h-20 w-full bg-zinc-500 p-2 resize-none"></textarea> 
            <input type="submit" value="create task" class="mt-2 px-3 py-1 bg-blue-500 rounded-md">
        </form>
        <div class="tasks py-5 flex flex-wrap gap-3">
            <% if(files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-600">
                        <h1 class="text-zinc-100"><%= val %></h1>
                        <div class="flex w-full justify-between mt-2">
                            <a href="/file/<%= val %>" class="text-blue-500 inline-block">Read More</a>
                            <a href="/edit/<%= val %>" class="text-zinc-400 ">Edit filename</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h1 class="text-zinc-100">no task yet</h1>
            <% } %>
        </div>
    </div>
</body>
</html>